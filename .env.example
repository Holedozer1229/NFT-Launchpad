# Environment Variables for Mainnet Deployment
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.
# ============================================================

# ---- Database (Required) -----------------------------------
# PostgreSQL connection string (Neon, Supabase, Railway, etc.)
DATABASE_URL=postgresql://user:password@host:5432/skynt_mainnet

# ---- Session Security (Required) ---------------------------
# At least 32 random bytes; generate with:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=replace_with_at_least_32_random_hex_chars

# ---- AI / Oracle Chat (Optional) ---------------------------
# Required for The Sphinx oracle chat feature
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...
# Override the OpenAI base URL if using a proxy or alternative provider
# AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ---- OpenSea Integration (Optional) -----------------------
# Required to submit real NFT listings to OpenSea Seaport
OPENSEA_API_KEY=

# ---- SphinxOS SKYNT Blockchain (Optional) -----------------
# External SphinxOS node URL (leave empty to use built-in simulation)
# SPHINXOS_NODE_URL=https://node.sphinxskynet.io

# ---- Runtime Environment -----------------------------------
NODE_ENV=production
PORT=5000
